            </block>

            <block class="Magento\Framework\View\Element\Template"
                   name="homepage.content"
                   template="Magento_Theme::html/home/content-block.phtml"
            >
                <block class="Magento\Cms\Block\Block" name="homepage.content.block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">content_block</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
