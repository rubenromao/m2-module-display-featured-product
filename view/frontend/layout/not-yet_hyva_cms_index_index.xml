        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="content">
<!--            <container name="homepage.top.banner">-->
<!--                <block class="Envisage\CampaignManager\Block\Widget\CampaignManager" name="home.banner"/>-->
<!--            </container>-->

            <block class="Magento\Framework\View\Element\Template"
                   name="homepage.below.banner"
                   template="Magento_Theme::html/home/below-banner.phtml"
            >

