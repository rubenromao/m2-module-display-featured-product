<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="2columns-left">
    <head>
        <css src="RubenRomao_DisplayFeaturedProduct::css/featured_product.css"/>
    </head>
    <body>

        <referenceContainer name="page.wrapper">
            <container name="header.container" as="header_container" label="Page Header Container"  htmlTag="header" htmlClass="page-header" before="main.content"/>
            <container name="page.top" as="page_top" label="After Page Header" after="header.container"/>

            <referenceContainer name="content">
                <block class="Magento\Framework\View\Element\Template" name="test" template="RubenRomao_DisplayFeaturedProduct::featured_product_image.phtml">
                <arguments>
                    <argument name="featured_product_vm" xsi:type="object">
                        RubenRomao\DisplayFeaturedProduct\ViewModel\FeaturedProductData
                    </argument>
                </arguments>
            </block>
            </referenceContainer>

            <container name="footer-container" as="footer" before="before.body.end" label="Page Footer Container" htmlTag="footer" htmlClass="page-footer" />
        </referenceContainer>

        <referenceContainer name="content">
            <!-- Left Column -->
            <container name="left.column" htmlTag="div" htmlClass="left-column" before="-">
                <!-- Add blocks or content here for the left column -->
                <block class="RubenRomao\DisplayFeaturedProduct\Block\FeaturedProductBlock"
                       name="homepage.display.featured.product.image"
                       template="RubenRomao_DisplayFeaturedProduct::featured_product_image.phtml">
                    <arguments>
                        <argument name="featured_product_vm" xsi:type="object">
                            RubenRomao\DisplayFeaturedProduct\ViewModel\FeaturedProductData
                        </argument>
                    </arguments>
                </block>
            </container>
            <!-- Right Column -->
            <container name="right.column" htmlTag="div" htmlClass="right-column">
                <!-- Add blocks or content here for the right column -->
                <block class="RubenRomao\DisplayFeaturedProduct\Block\FeaturedProductBlock"
                       name="custom.homepage.block.display.featured.product"
                       template="RubenRomao_DisplayFeaturedProduct::featured_product_details.phtml">
                    <arguments>
                        <argument name="featured_product_vm" xsi:type="object">
                            RubenRomao\DisplayFeaturedProduct\ViewModel\FeaturedProductData
                        </argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
