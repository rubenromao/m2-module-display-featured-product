<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="RubenRomao_DisplayFeaturedProduct::css/featured_product.css"/>
    </head>
    <body>
        <referenceContainer name="content" remove="true"/>
        <referenceContainer name="columns" remove="true"/>
        <referenceContainer name="main.content">
            <!-- Left Column -->
            <container name="left.column" htmlTag="div" htmlClass="left-column">
                <block class="RubenRomao\DisplayFeaturedProduct\Block\FeaturedProductBlock"
                       name="homepage.display.featured.product.image"
                       template="RubenRomao_DisplayFeaturedProduct::featured_product_image.phtml">
                    <arguments>
                        <argument name="featured_product_vm" xsi:type="object">
                            RubenRomao\DisplayFeaturedProduct\ViewModel\FeaturedProductData
                        </argument>
                    </arguments>
                </block>
            </container>
            <!-- Right Column -->
            <container name="right.column" htmlTag="div" htmlClass="right-column">
                <block class="RubenRomao\DisplayFeaturedProduct\Block\FeaturedProductBlock"
                       name="custom.homepage.block.display.featured.product"
                       template="RubenRomao_DisplayFeaturedProduct::featured_product_details.phtml">
                    <arguments>
                        <argument name="featured_product_vm" xsi:type="object">
                            RubenRomao\DisplayFeaturedProduct\ViewModel\FeaturedProductData
                        </argument>
                    </arguments>
                </block>
            </container>
            <!-- Error Message Block -->
            <block class="RubenRomao\DisplayFeaturedProduct\Block\FeaturedProductBlock"
                   name="error.message.block"
                   template="RubenRomao_DisplayFeaturedProduct::error_message.phtml">
                <arguments>
                    <argument name="featured_product_vm" xsi:type="object">
                        RubenRomao\DisplayFeaturedProduct\ViewModel\FeaturedProductData
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
